{{ define "title" }}<title>clementscode: comics</title>{{ end }}
{{ define "body-class" }}{{ end }}

{{ define "content" }}

		<!-- Main -->
			<section id="main" class="wrapper">
				<div class="container">
<form action=".">
  <input type="search" name="q" id="q"
    {{if .query}}value="{{.query}}"{{end}} />
  <input type="submit" value="search"/>
</form>
                    <ul class="flex-container wrap">
                    {{range $title := .Titles }}
                        {{with $comic := index $title.Comics 0}}
                        <li>
                            <a href="/comics/?s={{$comic.SeriesKey}}">
                                    <img width="400" 
                                        src="/static/comics/{{$comic.CoverPath}}"/>
                                    <p><b>{{$comic.SeriesId}}</b></p>
                            </a>
                        </li>
                        {{end}}
                    {{end}}
                     </ul>
				</div>
            </section>
{{ end }}
