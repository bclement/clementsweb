{{ define "title" }}<title>clementscode: comics</title>{{ end }}
{{ define "body-class" }}{{ end }}

{{ define "content" }}

		<!-- Main -->
			<section id="main" class="wrapper">
				<div class="container">
<form action=".">
  <input type="search" name="q" id="q"
    {{if .query}}value="{{.query}}"{{end}} />
  <input type="submit" value="search"/>
</form>
                    {{range $title := .Titles}}
						<section>
                            <a href="{{$title.Path}}">
						    <h3>{{$title.Publisher}} {{$title.DisplayName}}</h3>
                            </a>
							<div class="table-wrapper">
								<table class="alt">
									<thead>
										<tr>
											<th>Subtitle</th>
											<th>Issue</th>
											<th>Cover</th>
											<th>Notes</th>
											<th>Status</th>
										</tr>
									</thead>
									<tbody>
                                        {{range $comic:= $title.Comics}}
										<tr>
											<td>{{$comic.Subtitle}}</td>
                                            <td>
                                            <a href="{{$title.Path}}/{{$comic.Issue}}">
											{{$comic.Issue}}</a>
                                            </td>
											<td>{{$comic.CoverId}}</td>
											<td>{{$comic.Notes}}</td>
                                            {{if $comic.Best}}
											<td>{{$comic.Best.String}}</td>
                                            {{else}}
											<td style="color:red">missing</td>
                                            {{end}}
										</tr>
                                        {{end}}
									</tbody>
								</table>
							</div>
						</section>
                    {{end}}
				</div>
            </section>
{{ end }}
